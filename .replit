modules = ["php-8.2", "nodejs-20"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "php artisan serve --host=0.0.0.0 --port=80"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 5174
externalPort = 80

[workflows]

[[workflows.workflow]]
name = "Run"
author = 8252304
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan config:cache"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan route:cache"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan view:cache"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=80"
